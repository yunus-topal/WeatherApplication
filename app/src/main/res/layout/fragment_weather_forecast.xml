<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherForecastFragment" >

    <androidx.cardview.widget.CardView
        android:id="@+id/currentWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_baseline_cloud_24" />

        <TextView
            android:id="@+id/current_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_title_placeholder"
            android:textAlignment="center"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/current_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="96dp"
            android:text="@string/unknown_degree"
            android:textAlignment="center"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/current_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="48dp"
            android:text="@string/unknown_day"
            android:textAlignment="center"
            android:textSize="28sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentWeather">

        <TextView
            android:id="@+id/weekday1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/weekday_description"
            android:tag="weekday"
            android:text="@string/unknown_day"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/weather_icon1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="150dp"
            android:src="@drawable/ic_baseline_cloud_24" />

        <TextView
            android:id="@+id/max_degree1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="225dp"
            android:contentDescription="@string/max_degree_description"
            android:text="@string/unknown_degree"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/min_degree1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="300dp"
            android:contentDescription="@string/min_degree_description"
            android:text="@string/unknown_degree"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView1">

        <TextView
            android:id="@+id/weekday2"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/weekday_description"
            android:tag="weekday"
            android:text="@string/unknown_day"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/weather_icon2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="150dp"
            android:src="@drawable/ic_baseline_cloud_24" />

        <TextView
            android:id="@+id/max_degree2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="225dp"
            android:text="@string/unknown_degree"
            android:contentDescription="@string/max_degree_description"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/min_degree2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="300dp"
            android:text="@string/unknown_degree"
            android:textSize="20sp"
            android:contentDescription="@string/min_degree_description"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <TextView
            android:id="@+id/weekday3"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/weekday_description"
            android:tag="weekday"
            android:text="@string/unknown_day"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/weather_icon3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="150dp"
            android:src="@drawable/ic_baseline_cloud_24" />

        <TextView
            android:id="@+id/max_degree3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="225dp"
            android:text="@string/unknown_degree"
            android:textSize="20sp"
            android:contentDescription="@string/max_degree_description"
            />

        <TextView
            android:id="@+id/min_degree3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="300dp"
            android:text="@string/unknown_degree"
            android:textSize="20sp"
            android:contentDescription="@string/min_degree_description"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" >

        <TextView
            android:id="@+id/weekday4"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/weekday_description"
            android:tag="weekday"
            android:text="@string/unknown_day"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/weather_icon4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="150dp"
            android:src="@drawable/ic_baseline_cloud_24" />

        <TextView
            android:id="@+id/max_degree4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="225dp"
            android:text="@string/unknown_degree"
            android:textSize="20sp"
            android:contentDescription="@string/max_degree_description"/>

        <TextView
            android:id="@+id/min_degree4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="300dp"
            android:text="@string/unknown_degree"
            android:textSize="20sp"
            android:contentDescription="@string/min_degree_description"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4" >

        <TextView
            android:id="@+id/weekday5"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/weekday_description"
            android:tag="weekday"
            android:text="@string/unknown_day"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/weather_icon5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="150dp"
            android:src="@drawable/ic_baseline_cloud_24" />

        <TextView
            android:id="@+id/max_degree5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="225dp"
            android:text="@string/unknown_degree"
            android:textSize="20sp"
            android:contentDescription="@string/max_degree_description"/>

        <TextView
            android:id="@+id/min_degree5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="300dp"
            android:text="@string/unknown_degree"
            android:textSize="20sp"
            android:contentDescription="@string/min_degree_description"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Weekday"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView1"
        app:layout_constraintStart_toStartOf="@+id/cardView1" />

    <TextView
        android:id="@+id/night_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Night"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView1"
        app:layout_constraintEnd_toEndOf="@+id/cardView1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="16dp"
        android:text="Day"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cardView1"
        app:layout_constraintEnd_toEndOf="@+id/cardView1" />



</androidx.constraintlayout.widget.ConstraintLayout>